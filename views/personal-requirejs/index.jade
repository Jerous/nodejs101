extends ../../layouts/default

block head
  title Personal

block neck
  link(rel='stylesheet', href='/views/personal-requirejs/index.min.css?#{cacheBreaker}')
  script(src='/vendor/requirejs/require.js', data-main='/views/personal-requirejs/main.js?#{cacheBreaker}', type='text/javascript')

block body
  div.row
    div.col-sm-12
    section#personalApp.contiainer.content-section.text-center
    script#personalData(type='text/template')
