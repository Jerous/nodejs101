extends ../../layouts/default

block head
  title Personal

block neck
  link(rel='stylesheet', href='/views/personal/index.min.css?#{cacheBreaker}')

block body
  div.row
    div.col-sm-12
    section#personalApp.contiainer.content-section.text-center
    script#personalData(type='text/template')
      <img src="<%= results[0].user.picture.medium %>" class="img-thumbnail" alt="Responsive image" alt="" style="margin-top:10px;">
      <h1><%= results[0].user.gender %></h1>
      <h1><%= results[0].user.name.first %> <%= results[0].user.name.last %></h1>
      <h2><%= results[0].user.location.city %></h2>
      <h2><%= results[0].user.email %></h2>
  
    script(src='/vendor/jquery/dist/jquery.min.js?#{cacheBreaker}', type='text/javascript')
    script(src='/vendor/underscore/underscore-min.js?#{cacheBreaker}', type='text/javascript')
    script(src='/vendor/backbone/backbone.js?#{cacheBreaker}', type='text/javascript')
    script(src='/views/personal/main.js?#{cacheBreaker}', type='text/javascript')
    
